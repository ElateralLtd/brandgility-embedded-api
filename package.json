{
  "name": "@elateral/brandgility-embedded-api",
  "version": "1.0.0",
  "description": "Brandgility embedded mode library",
  "repository": "https://github.com/ElateralLtd/brandgility-embedded-api.git",
  "main": "lib/brandgility-embedded-api.js",
  "scripts": {
    "build": "webpack --env.production",
    "test": "concurrently \"yarn run test:lint\" \"yarn run test:unit\"",
    "test:lint": "eslint src --cache --max-warnings=0 --report-unused-disable-directives",
    "test:unit": "jest",
    "test:unit:coverage": "jest --coverage",
    "test:unit:watch": "yarn run test:unit --watch",
    "ci:test": "yarn run ci:test:lint && yarn run ci:test:unit",
    "ci:test:coverage": "yarn run ci:test:lint && yarn run ci:test:unit:coverage",
    "ci:test:lint": "yarn run test:lint",
    "ci:test:unit": "yarn run test:unit --runInBand --ci",
    "ci:test:unit:coverage": "yarn run ci:test:unit --coverage && yarn run coveralls",
    "deploy": "yarn publish --access public --new-version $npm_package_version",
    "update-master-if-version-is-increased": "node ./bin/update-master-if-version-is-increased.js",
    "coveralls": "minicat reports/test/coverage/lcov.info | coveralls",
    "postupdate": "bin/yarn-deduplicate.sh",
    "prepare": "bin/yarn-deduplicate.sh",
    "postuninstall": "bin/yarn-deduplicate.sh"
  },
  "jest-junit": {
    "output": "reports/test/junit.xml"
  },
  "moduleRoots": [
    "src"
  ],
  "license": "UNLICENSED",
  "engines": {
    "node": ">=14.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/plugin-proposal-export-default-from": "^7.10.4",
    "@babel/plugin-proposal-export-namespace-from": "^7.10.4",
    "@babel/plugin-proposal-private-methods": "^7.10.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.10.4",
    "@commitlint/cli": "^9.0.1",
    "@commitlint/is-ignored": "^9.0.1",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-dynamic-import-node": "^2.3.3",
    "concurrently": "^5.2.0",
    "core-js": "^3.4.6",
    "coveralls": "^3.1.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.3.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-import-resolver-webpack": "^0.12.2",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.17.1",
    "eslint-plugin-unicorn": "^20.1.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "jest-junit": "11.0.1",
    "minicat": "^1.0.0",
    "semver": "^7.3.2",
    "terser-webpack-plugin": "^1.4.4",
    "unused-files-webpack-plugin": "^3.4.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "yarn-deduplicate": "^2.0.0"
  }
}
